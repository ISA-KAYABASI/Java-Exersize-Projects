class exersizeTime23{
    public static void main(String[] args) {

        // there is two number its x and y, between that numbers calculate which ones is getting divide 3 without remaining
        // than  sum them

        int ciftSayi=0;
        int tekSayi=0;

        int x=2;
        int y=6;
        for (x = x+1; x < y; x++) {

           if (x%3==0) {

                tekSayi=tekSayi+x;
           }else
               ciftSayi=ciftSayi+x;
        }
        System.out.println("divided by 3 without any remaining = " + tekSayi);
        System.out.println("not able to divide 3 and sum them = " + ciftSayi);
    }
}

