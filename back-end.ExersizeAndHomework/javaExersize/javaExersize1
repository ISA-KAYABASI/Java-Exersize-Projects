class exersizeTime25{
    public static void main(String[] args) {

        int random1= (int) (Math.random()*3);
        int random2= (int) (Math.random()*3);

        while(random1==random2){

            System.out.println("Numbers is same bring another random number");
            random1= (int) (Math.random()*3);
            random2= (int) (Math.random()*3);
        }
        System.out.println("random1 = " + random1);
        System.out.println("random2 = " + random2);
        System.out.println("numbers is usefull and its not same");
    }
}
