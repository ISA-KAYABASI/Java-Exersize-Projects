class exersizeTime4{
    public static void main(String[] args) {

        //Write algorithm that find 2 random number between 0-50 and turn it to degre for 2 country and get avarage
        int jesus1=(int)(Math.random()*50+1);
        int jesus2=(int)(Math.random()*50+1);


        int result1=((jesus1*9)/5+32);
        int result2=((jesus2*9)/5+32);
        int general= (result2+result1)/2;
        System.out.println("In USA weather is = " + result2+"degre.");
        System.out.println("In TURKEY weather is = " + result1+"degre.");
        System.out.println("In the world weather is = " + general+" degre.");
    }
}
