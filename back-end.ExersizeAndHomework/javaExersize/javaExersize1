class exersizeTime16{
    public static void main(String[] args) {

        Scanner bro1=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro11= bro1.nextInt();
        System.out.println("bro11 = " + bro1);

        Scanner bro2=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro22=bro2.nextInt();
        System.out.println("bro22 = " + bro2);

        Scanner bro3=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro33= bro3.nextInt();
        System.out.println("bro11 = " + bro3);

        if(bro11>bro22){
            if(bro11>bro33){
                System.out.println("biggest brother 1");
        }else {
                System.out.println("biggest brother 3");
            }
        } else{
           if (bro33>bro22)
      {
            System.out.println("biggest brother 3");
        }else {
               System.out.println("biggest brother 2");
           }

    }
    }
}

class exersizeTime17{
    public static void main(String[] args) {
        int test1 = (int) (Math.random() * 100 + 1);
        int test2 = (int) (Math.random() * 100 + 1);
        int finalNote = (int) (Math.random() * 100 + 1);
        int passingNotu = (int) (test1 * 0.25 + test2 * 0.25 + finalNote * 0.50);


        int test1t = (int) (Math.random() * 100 + 1);
        int test2t = (int) (Math.random() * 100 + 1);
        int finalNotet = (int) (Math.random() * 100 + 1);
        int passingNotut = (int) (test1t * 0.25 + test2t * 0.25 + finalNotet * 0.50);

        int ortalama2 = (passingNotu + passingNotut) / 2;

        System.out.println("vize1 = " + test1);
        System.out.println("vize2 = " + test2);
        System.out.println("finalNote = " + finalNote);
        System.out.println("gecmeNotu = " + passingNotu);

        if (passingNotu < ortalama2) {
            System.out.println("result failed");
        } else {
            System.out.println("succesfully completed ");
        }
        System.out.println("vize1 = " + test1t);
        System.out.println("vize2 = " + test2t);
        System.out.println("finalNote = " + finalNotet);
        System.out.println("gecmeNotu = " + passingNotut);

        if (passingNotut < ortalama2) {
            System.out.println("you are not able to give true respond the questin try later");
        } else {
            System.out.println("your answer is correct passed");
        }
        System.out.println("avarage passing note " + ortalama2);
    }
}

class exersizeTime18{
    public static void main(String[] args) {


        Scanner bro1=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro11= bro1.nextInt();
        System.out.println("bro1 = " + bro1);

        Scanner bro2=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro22=bro2.nextInt();
        System.out.println("bro2 = " + bro2);

        Scanner bro3=new Scanner(System.in);
        System.out.println("Please enter a number :");
        int bro33= bro3.nextInt();
        System.out.println("bro1 = " + bro3);

        if (bro11>bro22 && bro11>bro33) System.out.println("bro1 is the biggest brother");
        if (bro22>bro11 && bro22>bro33) System.out.println("bro2 is the biggest brother");
        if (bro33>bro22 && bro33>bro11) System.out.println("bro3 is the biggest brother");
    }
}

