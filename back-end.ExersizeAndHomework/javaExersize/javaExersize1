class exersizeTime29{
    public static void main(String[] args) {

        int [] arrays= new int[]{4,5,7,1,8};
        arraysCreate(arrays);
        arrayscalculate(arrays);
        int totalL=0;
    }
    private static void arrayscalculate(int[] arrays) {
        int totalL=0;
        for (int i = 0; i < arrays.length; i++) {

            totalL = totalL+arrays[i];
        }
        System.out.println("totalL = " + totalL);
    }
    private static void arraysCreate(int[] arrays) {
        for (int i = 0; i < arrays.length ; i++) {
            System.out.printf("%5d",arrays[i]);
        }
    }
}

class exersizeTime30{
    public static void main(String[] args) {
        // try catch finally

        Scanner read=new Scanner(System.in);

        System.out.println("Please enter a number");

        try{
            int number1=read.nextInt();

        }catch (Exception e){
            System.out.println("e = " + e);
            System.out.println("Error");
        }finally {
            System.out.println("try catch is end");
        }
        System.out.println("program is done");
    }
}

class exersizeTime31{
    public static void main(String[] args) {

        int[] arrays = new int[]{1,2,3,4,5,6,7};
