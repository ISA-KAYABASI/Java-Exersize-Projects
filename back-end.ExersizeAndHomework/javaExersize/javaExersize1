class exersizeTime12{
    public static void main(String[] args) {
        //Get 2 number after divide them to eachother is it positif or negative

        Scanner number1=new Scanner(System.in);
        System.out.println("Please enter a number = ");
        int value1= number1.nextInt();
        System.out.println("value1 = " + value1);

        Scanner number2=new Scanner(System.in);
        System.out.println("Please enter another number = ");
        int value2= number2.nextInt();
        System.out.println("value2 = " + value2);

        double dividedNumber=value1/value2;

        String result= (dividedNumber%2==0)? "Cifttir": "Tektir";
        System.out.println("Result = " + result);

    }
}

