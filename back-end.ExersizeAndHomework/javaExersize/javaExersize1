class exersizeTime10{
    public static void main(String[] args) {

        //Trying to find the place int the string

        String value1= "Welcome us";
        int number1;
        number1=value1.indexOf(" ");
        System.out.println("Our writed value = " + value1);
        System.out.println("It will show space place = " + number1);

        //We will take all we have until our .indexOf() place
        String value2=value1.substring(0,number1);
        System.out.println("It will write from 0 index to number 7 space index  = " + value2);

        String value3=value1.substring(7,value1.length());
        System.out.println("After space index until the end it will write = " + value3);

    }
}
